<p id="notice"><%= notice %></p>
<div>
  <h1 class="header todo_list_title">
    <%= @todo_list.title %>
  </h1>
  <p class="todo_list_description">
    <%= @todo_list.description %>
  </p>
</div>
<div id="todo_items_wrapper">
  <%= render @todo_list.todo_items %>
  <div id="form">
    <%= render "todo_items/form" %>
  </div>
</div>

<div style="display: flex; justify-content: center">
<div class="todo_list_operation">
  <%= link_to 'Edit', edit_todo_list_path(@todo_list), class: "secondary_button"%> |
  <%= link_to 'Back', todo_lists_path, class: "secondary_button"%> | 
  <%= link_to 'Delete', todo_list_path(@todo_list), method: :delete, data: { confirm: "Are you sure?" }, class: "secondary_button"%> |
</div>
</div>
